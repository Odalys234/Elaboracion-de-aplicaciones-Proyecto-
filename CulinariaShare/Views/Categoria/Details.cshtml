@model CulinariaShare.Models.Categoria

@{
    ViewData["Title"] = "Detalles";
}
<br />
<br />

<h1 class="text-center">Detalles de la Categoría</h1>

<div class="d-flex justify-content-center">
    <div class="col-md-6">
        <h4>Categoria</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
        </dl>
        <div class="text-center mt-3">
            <div class="row">
                <div class="col">
                    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-outline-info" })
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-outline-secondary">Regresar</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
