@model CulinariaShare.Models.Usuario

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Culinaria Share - Registro</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link href="~/startboostrap/css/login.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
</head>
<body>
    
    <div class="container">
        <form asp-action="Register" method="post">
            <h3>REGISTRARSE</h3>

            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            

            <input type="hidden" asp-for="RoleID" value="2" />

            <button type="submit">ENVIAR INFORMACIÓN</button>
            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <span style="color: red;">@ViewBag.Error</span>
            }
            <a href="Login" class="custom-link">¿Ya tienes una cuenta?, Inicia sesión</a>

           
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>
    <script src="js/scripts.js"></script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
